@model CatalogManager.Models.Category
@{
    ViewBag.Title = "Catalog";
}


<div class="jumbotron">
    <h1>Category: @Model.Name</h1>
    
    
</div>

<div class="row">
    <div class="col-md-8 details">
        <div class="row">
            @if (Model.Products != null)
            {

                foreach (string product in Model.Products)
                {
                    @Html.Partial("_ProductPartial", Model.AllProducts[product])
                }

                <div class="col-md-4 product">
                    <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Add Product &raquo;</a></p>
                </div>
            }


        </div>
        <div class="row subcategories">
            @if (Model.SubCategories != null)
            {

                foreach (string subCategory in Model.SubCategories)
                {
                    @Html.Partial("_SubCategoryPartial", Model.AllCategories[subCategory])
                }                
                <div class="row subcategory">
                    <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Add Sub-category &raquo;</a></p>
                </div>
            }


        </div>
    </div>

</div>