@model CatalogManager.Models.Category
@{
    ViewBag.Title = "Catalog";
}


<div class="jumbotron">
    <h1>Catalog Manager</h1>
    <p class="lead">Manage Best Buy's Catalog, With Style!</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-8 details">
        <div class="row">
            @if (Model.Products != null)
            {
                for (var i = 0; i < Model.Products.Count; i++)
                {
                    @Html.Partial("_ProductPartial", Model.Products[i])
                }

                <div class="col-md-4 product">
                    <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Add Product &raquo;</a></p>
                </div>
            }


        </div>
        <div class="row subcategories">
            @if (Model.SubCategories != null)
            {
                for (var i = 0; i < Model.SubCategories.Count; i++)
                {
                    @Html.Partial("_SubCategoryPartial", Model.SubCategories[i])
                }

                <div class="row subcategory">
                    <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Add Sub-category &raquo;</a></p>
                </div>
            }


        </div>
    </div>

</div>