@model CatalogManager.Models.Product

<div class="col-md-4 product">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>$@Model.Price</p>
    @Html.ActionLink("View", "Index", "Product", new { name = @Model.Name }, null)
    @Html.ActionLink("Edit", "Edit", "Product", new { name = @Model.Name, @ParentCategoryName = ViewBag.ParentCategoryName}, null)
    @Html.ActionLink("Delete", "Delete", "Product", new { name = @Model.Name, @pageType = @ViewData["PageType"], @ParentCategoryName = ViewBag.ParentCategoryName }, null)
    
</div>
