<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Steve's Catalog Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">

            <div class="col-md-10">
                @Html.ActionLink("Steve's Catalog Manager", "Index", "Catalog", null, new {@class = "navbar-brand"})
            </div>
            <div class="col-md-1">
                <img src="http://images.enstarz.com/data/images/full/22437/best-buy.png" alt="Sample Image" width="50px" height="30px"/>
            </div>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>

        <div class="col-md-10">
            <p>&copy; @DateTime.Now.Year - Steve's Catalog Manager</p>
        </div>
        <div class="col-md-1">
            <img src="http://images.enstarz.com/data/images/full/22437/best-buy.png" alt="Sample Image" width="50px" height="30px"/>
        </div>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", false)
</body>
</html>